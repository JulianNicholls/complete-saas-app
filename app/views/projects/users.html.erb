<div class="page-header">
  <h3>Users for project <%= @project.title %></h3>
  <strong>(other than yourself}</strong>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th><%= t '.actions', default: t('helper.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @project_users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <% if !user.admin? %>
      <td>
        <%= link_to 'Remove',
                    user_project_path(user.user_projects.find_by(project_id: @project.id), tenant_id: @project.tenant_id),
                    method: :delete,
                    data: { confirm: t('.confirm', default: t('helpers.links.confirm', default: 'are you sure?')) },
                    class: 'btn btn-danger btn-xs' %>
      </td>
      <% end -%>
    </tr>
    <% end %>
  </tbody>
</table>

<h3>Users for project <%= @project.title %></h3>
<strong>(Admins don't need adding}</strong>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th><%= t '.actions', default: t('helper.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @other_users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td>
        <%= link_to 'Add',
                    add_user_tenant_project_path(id: @project.id, tenant_id: @project.tenant_id, user_id: user.id),
                    method: :put,
                    class: 'btn btn-success btn-xs' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back',
            tenant_project_path(id: @project.id, tenant_id: @project.tenant_id),
            class: 'btn btn-primary' %>
