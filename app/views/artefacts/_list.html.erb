<%- model_class = Artefact -%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:key) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% artefacts.each do |artefact| %>
      <tr>
        <td><%= link_to artefact.name, artefact, class: 'main-link' %></td>
        <td><%= s3_link Tenant.current_tenant_id, artefact.key %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      artefact_path(artefact),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New artefact', new_artefact_path(project_id: @project.id),
            :class => 'btn btn-primary' %>
