<% if current_user %>
<div class="page-header">
  <h3 class="pull-right">Organization: <%= @tenant.name %></h3>
  <h1>Projects</h1>
</div>

<%= render 'projects/list' %>
<% else %>
<div class="jumbotron">
  <h2 class="text-center">Welcome to Complete Project Management</h2>
  <p class="lead">
    You'll love managing your projects with our services.
    Please take a look at our great plans.
  </p>
</div>
<div class="row">
